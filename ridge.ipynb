   "source": [
    "def ridge_regression(x, y, lambda_):\n",
    "    A = x.T.dot(x) + 2*len(x)*lambda_*np.identity(x.shape[1])\n",
    "    B = x.T.dot(y)\n",
    "    return np.linalg.solve(A,B)"
   ]
  }
